<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sunshine.app.DetailActivity.DetailFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_image"
        android:layout_below="@+id/movie_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/overview"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/detail_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/movie_name"
        android:layout_alignParentTop="true"
        android:background="@color/accent_material_light"
        android:paddingTop="20dp"
        android:paddingLeft="80dp"
        android:textAlignment="center"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:text="@string/abc_action_bar_home_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date"

        android:layout_below="@+id/movie_name"
        android:layout_toRightOf="@+id/detail_image"
        android:layout_toEndOf="@+id/detail_image"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Ratings"
        android:id="@+id/rating"
        android:layout_below="@+id/date"
        android:layout_alignRight="@+id/date"
        android:layout_alignEnd="@+id/date" />

</RelativeLayout>
